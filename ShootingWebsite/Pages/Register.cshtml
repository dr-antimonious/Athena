@page
@using Microsoft.IdentityModel.Tokens
@model Register
@{
    ViewData["Title"] = "Register";
}

<div class="container-fluid parallax">
    <div class="row justify-content-center align-items-center">
        <div class="d-flex min-vh-100 justify-content-center align-items-center">
            <div class="itembackdrop shadow p-3 mb-5 rounded text-center" style="font-family: Poppins; font-style: normal" id="register">
                <a asp-page="/Index">
                    <img class="mt-3 mb-3" style="width: 25%" src="img/logocrop.png"/>
                </a>
                <h1 class="text-white" style="font-weight: 700">welcome</h1>
                <h3 class="text-white" style="font-weight: 300">please register below</h3>
                <br/>
                <div class="d-flex justify-content-center text-start">
                    <form method="post">
                        <label for="@Model.UserRequest.FirstName" class="form-label text-white">first name</label>
                        <input asp-for="@Model.UserRequest.FirstName" type="text" class="form-control" placeholder="first name" value="@Model.UserRequest.FirstName"/>
                        <span asp-validation-for="@Model.UserRequest.FirstName" class="text-white"></span>
                        <br/>
                        <label for="@Model.UserRequest.AdditionalNames" class="form-label text-white">additional names</label>
                        <input asp-for="@Model.UserRequest.AdditionalNames" type="text" class="form-control" placeholder="addtl names" value="@Model.UserRequest.AdditionalNames"/>
                        <span asp-validation-for="@Model.UserRequest.AdditionalNames" class="text-white"></span>
                        <br/>
                        <label for="@Model.UserRequest.LastName" class="form-label text-white">last name</label>
                        <input asp-for="@Model.UserRequest.LastName" type="text" class="form-control" placeholder="last name" value="@Model.UserRequest.LastName"/>
                        <span asp-validation-for="@Model.UserRequest.LastName" class="text-white"></span>
                        <br/>
                        <label for="@Model.UserRequest.DateOfBirth" class="form-label text-white">date of birth</label>
                        <input asp-for="@Model.UserRequest.DateOfBirth" type="date" class="form-control" placeholder="@DateTime.Now.Date.ToString("yyyy-MM-dd")" value="@(Model.UserRequest.DateOfBirth.Date.ToString("yyyy-MM-dd").Equals("0001-01-01") ? (DateTime.Now.Date - new TimeSpan(6575, 0, 0, 0)).ToString("yyyy-MM-dd") : Model.UserRequest.DateOfBirth.Date.ToString("yyyy-MM-dd"))" />
                        <span asp-validation-for="@Model.UserRequest.DateOfBirth" class="text-white"></span>
                        <br/>
                        <label for="@Model.UserRequest.Gender" class="form-label text-white">gender</label>
                        <input asp-for="@Model.UserRequest.Gender" type="text" class="form-control" placeholder="f/m/x" value="@(!Model.UserRequest.Gender.ToString().Contains("xmf") ? "" : Model.UserRequest.Gender)" />
                        <span asp-validation-for="@Model.UserRequest.Gender" class="text-white"></span>
                        <br/>
                        <label for="@Model.UserRequest.PhoneNumber" class="form-label text-white">phone number</label>
                        <input asp-for="@Model.UserRequest.PhoneNumber" type="tel" class="form-control" placeholder="+385912345678" value="@Model.UserRequest.PhoneNumber"/>
                        <span asp-validation-for="@Model.UserRequest.PhoneNumber" class="text-white"></span>
                        <br/>
                        <label for="@Model.UserRequest.Email" class="form-label text-white">e-mail address</label>
                        <input asp-for="@Model.UserRequest.Email" type="email" class="form-control" placeholder="coolguy123@gmail.com" value="@Model.UserRequest.Email"/>
                        <span asp-validation-for="@Model.UserRequest.Email" class="text-white"></span>
                        <br/>
                        <label for="@Model.Password" class="form-label text-white">password</label>
                        <input asp-for="@Model.Password" type="password" class="form-control" placeholder="password" value="@Model.Password"/>
                        <span asp-validation-for="@Model.Password" class="text-white"></span>
                        <br/>
                        <button type="submit" class="btn btn-dark">register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    label { display: block;}

    .parallax {
        background: url('/img/326551671_1195694677754775_7874095249251494241_n.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        background-attachment: fixed;
    }

    .itembackdrop {
        backdrop-filter: blur(25px) brightness(75%);
    }

    span {
        display: block;
        max-width: 20em;
        word-break: normal;
    }
</style>

@section scripts{
    <partial name="Shared/_ValidationScriptsPartial"/>
}