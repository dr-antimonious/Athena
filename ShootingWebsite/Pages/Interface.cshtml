@page
@using Artemis.Contracts.DTOs
@model Interface
@{
    ViewData["Title"] = "Interface";
}

<div class="container-fluid" style="font-family: Poppins; font-style: normal">
    <div class="row bg-black">
        <div class="d-flex justify-content-center align-items-center col-md-2">
            <a class="d-flex justify-content-start" asp-page="/Interface">
                <img class="ms-3 mt-3 mb-3" style="width: 25%" src="img/logocropDark.png" />
            </a>
        </div>
        <div class="col-md-6"></div>
        <div class="d-flex justify-content-end align-items-center col-md-4">
            <a asp-page="/EditAccount" style="font-weight: 400" class="mt-3 mb-3 me-3 btn btn-light">edit account</a>
            <a asp-page="/Logout" style="font-weight: 400" class="mt-3 mb-3 me-3 btn btn-light">log out</a>
        </div>
    </div>
    <div class="row">
        <div class="d-flex justify-content-start align-items-center col-md-12">
            <h1 style="font-weight: 700" class="ms-3 mt-3 mb-3">welcome back, @Model.user.FirstName</h1>
        </div>
    </div>
    <div class="row">
        <div class="d-flex justify-content-start align-items-start col-md-12">
            <a asp-page="/AddMatch" style="font-weight: 400" class="mb-3 ms-3 btn btn-dark">add match</a>
        </div>
    </div>
    <div class="row">
        <div class="d-flex justify-content-start align-items-center col-md-12">
            <table class="table ms-3 mb-3 me-3">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Discipline</th>
                    <th scope="col">Date</th>
                    <th scope="col">Start time</th>
                    <th scope="col">End time</th>
                    <th scope="col">Location</th>
                    <th scope="col">Details</th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody>
                @foreach (MatchOutputDto match in @Model.matches)
                {
                    <tr>
                        <th scope="row">@(Model.matches.IndexOf(match) + 1)</th>
                        <td>@match.Type</td>
                        <td>@match.StartTimestamp.TimeStamp.Date.ToString("yyyy-MM-dd")</td>
                        <td>@match.StartTimestamp.TimeStamp.TimeOfDay.ToString("hh\\:mm")</td>
                        <td>@match.EndTimestamp.TimeStamp.TimeOfDay.ToString("hh\\:mm")</td>
                        <td>@match.Location.Name</td>
                        <td>
                            <a href="/MatchDetails?matchId=@match.Id" style="font-weight: 400" class="btn btn-dark">
                                View
                            </a>
                        </td>
                        <td>
                            <a href="/DeleteMatch?matchId=@match.Id" style="font-weight: 400" class="btn btn-danger">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>