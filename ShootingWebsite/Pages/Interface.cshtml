@page
@model Interface
@{
    ViewData["Title"] = TempData["username"];
}

<div class="container-fluid" style="font-family: Poppins; font-style: normal">
    <div class="row bg-black">
        <div class="d-flex justify-content-center align-items-center col-md-2">
            <a class="d-flex justify-content-center" asp-page="/Interface">
                <img class="ms-3 mt-3 mb-3" style="width: 25%" src="img/logocropDark.png" />
            </a>
        </div>
        <div class="col-md-8"></div>
        <div class="d-flex justify-content-center align-items-center col-md-2">
            <a asp-page="/Logout" style="font-weight: 400" class="mt-3 mb-3 me-3 btn btn-light">log out</a>
        </div>
    </div>
    <div class="row">
        <div class="d-flex justify-content-start align-items-center col-md-12">
            <h1 style="font-weight: 700" class="ms-3 mt-3 mb-3">welcome back, @TempData["username"]</h1>
        </div>
    </div>
    <div class="row">
        <div class="d-flex justify-content-start align-items-center col-md-12">
            <h3 style="font-weight: 400" class="ms-3 mb-3">@TempData["affirmation"]</h3>
        </div>
    </div>
    <div class="row">
        <div class="d-flex justify-content-start align-items-center col-md-12">
            <a asp-page="/EditMatch" style="font-weight: 400" class="mb-3 ms-3 btn btn-dark">add match</a>
        </div>
    </div>
    <div class="row">
        <div class="d-flex justify-content-start align-items-center col-md-12">
            <table class="table ms-3 mb-3 me-3">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Date</th>
                    <th scope="col">Start time</th>
                    <th scope="col">End time</th>
                    <th scope="col">Location</th>
                    <th scope="col">Result</th>
                    <th scope="col">Inner 10s</th>
                    <th scope="col">Details</th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody>
                @foreach (Dictionary<String, String> match in Model.matchList)
                {
                    <tr>
                        <th scope="row">@(Model.matchList.IndexOf(match)+1)</th>
                        <td>@match["Date"]</td>
                        <td>@match["StartTime"]</td>
                        <td>@match["EndTime"]</td>
                        <td>@match["Location"]</td>
                        <td>@match["Result"]</td>
                        <td>@match["Inner10s"]</td>
                        <td>
                            <a href="/MatchDetails?matchId=@match["id"]" style="font-weight: 400" class="btn btn-dark">
                                View
                            </a>
                        </td>
                        <td>
                            <a href="/DeleteMatch?matchId=@match["id"]" style="font-weight: 400" class="btn btn-danger">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>