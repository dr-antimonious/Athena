@page
@model ShootingWebsite.Pages.EditAccountModel
@{
    ViewData["Title"] = "Account";
}

<div class="container-fluid" style="font-family: Poppins; font-style: normal">
    <div class="row bg-black">
        <div class="d-flex justify-content-center align-items-center col-md-2">
            <a class="d-flex justify-content-start" asp-page="/Interface">
                <img class="ms-3 mt-3 mb-3" style="width: 25%" src="img/logocropDark.png" />
            </a>
        </div>
        <div class="col-md-4"></div>
        <div class="d-flex justify-content-end align-items-center col-md-6">
            <a asp-page="/Interface" style="font-weight: 400" class="mt-3 mb-3 me-3 btn btn-light">go back</a>
            <a asp-page="/DeleteAccount" style="font-weight: 400" class="mt-3 mb-3 me-3 btn btn-light">delete account</a>
            <a asp-page="/Logout" style="font-weight: 400" class="mt-3 mb-3 me-3 btn btn-light">log out</a>
        </div>
    </div>
    <div class="d-flex row justify-content-center align-items-center">
        <div class="mt-3 shadow p-3 mb-5 rounded col-md-6">
            <form method="post">
                <label for="@Model.UserRequest.FirstName" class="form-label">first name</label>
                <input asp-for="@Model.UserRequest.FirstName" type="text" class="form-control" placeholder="first name" value="@Model.UserRequest.FirstName" />
                <span asp-validation-for="@Model.UserRequest.FirstName" class="text-danger"></span>
                <br />
                <label for="@Model.UserRequest.AdditionalNames" class="form-label">additional names</label>
                <input asp-for="@Model.UserRequest.AdditionalNames" type="text" class="form-control" placeholder="addtl names" value="@Model.UserRequest.AdditionalNames" />
                <span asp-validation-for="@Model.UserRequest.AdditionalNames" class="text-danger"></span>
                <br />
                <label for="@Model.UserRequest.LastName" class="form-label">last name</label>
                <input asp-for="@Model.UserRequest.LastName" type="text" class="form-control" placeholder="last name" value="@Model.UserRequest.LastName" />
                <span asp-validation-for="@Model.UserRequest.LastName" class="text-danger"></span>
                <br />
                <label for="@Model.UserRequest.DateOfBirth" class="form-label">date of birth</label>
                <input asp-for="@Model.UserRequest.DateOfBirth" type="date" class="form-control" value="@Model.UserRequest.DateOfBirth.Date.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="@Model.UserRequest.DateOfBirth" class="text-danger"></span>
                <br />
                <label for="@Model.UserRequest.Gender" class="form-label">gender</label>
                <input asp-for="@Model.UserRequest.Gender" type="text" class="form-control" placeholder="f/m/x" value="@Model.UserRequest.Gender.ToString()" />
                <span asp-validation-for="@Model.UserRequest.Gender" class="text-danger"></span>
                <br />
                <label for="@Model.UserRequest.PhoneNumber" class="form-label">phone number</label>
                <input asp-for="@Model.UserRequest.PhoneNumber" type="tel" class="form-control" value="@Model.UserRequest.PhoneNumber" />
                <span asp-validation-for="@Model.UserRequest.PhoneNumber" class="text-danger"></span>
                <br />
                <label for="@Model.UserRequest.Email" class="form-label">e-mail address</label>
                <input asp-for="@Model.UserRequest.Email" type="email" class="form-control" placeholder="coolguy123@gmail.com" value="@Model.UserRequest.Email" />
                <span asp-validation-for="@Model.UserRequest.Email" class="text-danger"></span>
                <br />
                <button type="submit" class="btn btn-dark">save changes</button>
            </form>
        </div>
    </div>
</div>

<style>
    label {
        display: block;
    }

    span {
        display: block;
        max-width: 25em;
        word-break: normal;
    }
</style>

@section scripts{
    <partial name="Shared/_ValidationScriptsPartial"/>
}