@page
@model EditMatch
@{
    ViewData["Title"] = TempData["matchId"];
}

<div class="container-fluid" style="font-family: Poppins; font-style: normal">
    <div class="row bg-black">
        <div class="d-flex justify-content-center align-items-center col-md-2">
            <a class="d-flex justify-content-center" asp-page="/Interface">
                <img class="ms-3 mt-3 mb-3" style="width: 25%" src="img/logocropDark.png" />
            </a>
        </div>
        <div class="col-md-8"></div>
        <div class="d-flex justify-content-center align-items-center col-md-2">
            <a asp-page="/Logout" style="font-weight: 400" class="mt-3 mb-3 me-3 btn btn-light">log out</a>
        </div>
    </div>
    <div class="d-flex row justify-content-center align-items-center">
        <div class="mt-3 shadow p-3 mb-5 rounded col-md-6">
            <form method="post">
                <label for="date" class="form-label">Date:</label>
                <input name="date" id="date" type="date" class="form-control" value="@TempData["date"]"/>
                <br />
                <label for="startTime" class="form-label">Start time:</label>
                <input name="startTime" id="startTime" type="time" class="form-control" value="@TempData["startTime"]" />
                <br />
                <label for="endTime" class="form-label">End time:</label>
                <input name="endTime" id="endTime" type="time" class="form-control" value="@TempData["endTime"]" />
                <br />
                <label for="location" class="form-label">Location:</label>
                <input name="location" id="location" type="text" class="form-control" value="@TempData["location"]" />
                <br />
                <label for="result" class="form-label">Result:</label>
                <input name="result" id="result" type="number" class="form-control" value="@TempData["result"]" />
                <br />
                <label for="inner10s" class="form-label">Inner 10s:</label>
                <input name="inner10s" id="inner10s" type="number" class="form-control" value="@TempData["inner10s"]" />
                <br />
                <label for="temperature" class="form-label">Temperature (°C):</label>
                <input name="temperature" id="temperature" type="number" class="form-control" value="@TempData["temperature"]" />
                <br />
                <label for="humidity" class="form-label">Humidity (%):</label>
                <input name="humidity" id="humidity" type="number" class="form-control" value="@TempData["humidity"]" />
                <br />
                <label for="airPressure" class="form-label">Air pressure (kPa):</label>
                <input name="airPressure" id="airPressure" type="number" class="form-control" value="@TempData["airPressure"]"/>
                <br />
                <label for="mood" class="form-label">Overall mood:</label>
                <input name="mood" id="mood" type="text" class="form-control" value="@TempData["mood"]" />
                <br />
                <label for="notes" class="form-label">Notes:</label>
                <input name="notes" id="notes" type="text" class="form-control" value="@TempData["notes"]" />
                <br />
                @for (int i = 1; i < 7; i++)
                {
                    <p style="font-weight: 700">Series @i:</p>
                    <label for="startTime-@i" class="form-label">Start time:</label>
                    <input name="startTime-@i" id="startTime-@i" type="time" class="form-control" value="@TempData[$"startTime-{@i}"]"/>
                    <br />
                    <label for="endTime-@i" class="form-label">End time:</label>
                    <input name="endTime-@i" id="endTime-@i" type="time" class="form-control" value="@TempData[$"endTime-{@i}"]"/>
                    <br />
                    <label for="result-@i" class="form-label">Result:</label>
                    <input name="result-@i" id="result-@i" type="number" class="form-control" value="@TempData[$"result-{@i}"]"/>
                    <br />
                    <label for="decimal-@i" class="form-label">Decimal (use dot, not comma!):</label>
                    <input name="decimal-@i" id="decimal-@i" type="text" class="form-control" value="@TempData[$"decimal-{@i}"]"/>
                    <br />
                    <label for="inner10s-@i" class="form-label">Inner 10s:</label>
                    <input name="inner10s-@i" id="inner10s-@i" type="number" class="form-control" value="@TempData[$"inner10s-{@i}"]"/>
                    <br />
                    <label for="notes-@i" class="form-label">Notes:</label>
                    <input name="notes-@i" id="notes-@i" type="text" class="form-control" value="@TempData[$"notes-{@i}"]"/>
                    <br />
                }
                <button type="submit" class="btn btn-dark">save match</button>
            </form>
        </div>
    </div>
</div>

<style>
    label { display: block;}
</style>