@page
@model IndexModel
@{
    ViewData["Title"] = "Welcome";
}

<div class="container-fluid parallax" style="font-family: Poppins; font-style: normal">
    <div class="row justify-content-center align-items-center">
        <div class="d-flex min-vh-100 justify-content-center align-items-center">
            <div class="itembackdrop shadow p-3 mb-5 rounded text-center">
                <img class="mt-3 mb-3" style="width: 25%" src="img/logocrop.png" />
                <h1 class="text-white" style="font-weight: 700">welcome</h1>
                <h3 class="text-white" style="font-weight: 400">to the future of shooting</h3>
                <a asp-page="/Login" class="mt-3 mb-3 btn-lg btn btn-dark" style="font-weight: 400">login</a>
                <a asp-page="/Register" class="mt-3 mb-3 btn-lg btn btn-dark" style="font-weight: 400">register</a>
            </div>
        </div>
    </div>
</div>

<style>
    .parallax {
        background: url('/img/326551671_1195694677754775_7874095249251494241_n.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        background-attachment: fixed;
    }

    .itembackdrop {
        backdrop-filter: blur(25px) brightness(75%);
    }
</style>