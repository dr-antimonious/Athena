@page
@model MatchDetails
@{
    ViewData["Title"] = TempData["matchId"];
}

<div class="container-fluid" style="font-family: Poppins; font-style: normal">
    <div class="row bg-black">
        <div class="d-flex justify-content-center align-items-center col-md-2">
            <a class="d-flex justify-content-center" asp-page="/Interface">
                <img class="ms-3 mt-3 mb-3" style="width: 25%" src="img/logocropDark.png"/>
            </a>
        </div>
        <div class="col-md-8"></div>
        <div class="d-flex justify-content-center align-items-center col-md-2">
            <a asp-page="/Logout" style="font-weight: 400" class="mt-3 mb-3 me-3 btn btn-light">log out</a>
        </div>
    </div>
    <div class="d-flex row justify-content-center align-items-center">
        <div class="mt-3 shadow p-3 mb-5 rounded col-md-6">
            <div class="row">
                <div class="d-flex justify-content-start align-items-center">
                    <a href="/EditMatch?matchId=@Model.matchDictionary["id"]" style="font-weight: 400" class="mt-3 mb-3 ms-3 btn btn-dark">edit match</a>
                    <a href="/Interface" style="font-weight: 400" class="mt-3 mb-3 ms-3 btn btn-dark">go back</a>
                </div>
            </div>
            <div class="row">
                <div class="d-flex justify-content-start align-items-center">
                    <h6 class="ms-3 mb-3" style="font-weight: 700">Date:</h6>
                    <h6 class="ms-3 mb-3" style="font-weight: 400">@Model.matchDictionary["Date"]</h6>
                    <h6 class="ms-3 mb-3" style="font-weight: 700">Start time:</h6>
                    <h6 class="ms-3 mb-3" style="font-weight: 400">@Model.matchDictionary["StartTime"]</h6>
                    <h6 class="ms-3 mb-3" style="font-weight: 700">End time:</h6>
                    <h6 class="ms-3 mb-3" style="font-weight: 400">@Model.matchDictionary["EndTime"]</h6>
                </div>
            </div>
            <div class="row">
                <div class="d-flex justify-content-start align-items-center">
                    <h6 class="ms-3 mb-3" style="font-weight: 700">Location:</h6>
                    <h6 class="ms-3 mb-3" style="font-weight: 400">@Model.matchDictionary["Location"]</h6>
                    <h6 class="ms-3 mb-3" style="font-weight: 700">Temperature:</h6>
                    <h6 class="ms-3 mb-3" style="font-weight: 400">@Model.matchDictionary["Temperature"]</h6>
                    <h6 class="ms-3 mb-3" style="font-weight: 700">Humidity:</h6>
                    <h6 class="ms-3 mb-3" style="font-weight: 400">@Model.matchDictionary["Humidity"]</h6>
                    <h6 class="ms-3 mb-3" style="font-weight: 700">Air pressure:</h6>
                    <h6 class="ms-3 mb-3" style="font-weight: 400">@Model.matchDictionary["AirPressure"]</h6>
                </div>
            </div>
            <div class="row">
                <div class="d-flex justify-content-start align-items-center">
                    <h6 class="ms-3 mb-3" style="font-weight: 700">Result:</h6>
                    <h6 class="ms-3 mb-3" style="font-weight: 400">@Model.matchDictionary["Result"]</h6>
                    <h6 class="ms-3 mb-3" style="font-weight: 700">Inner 10s:</h6>
                    <h6 class="ms-3 mb-3" style="font-weight: 400">@Model.matchDictionary["Inner10s"]</h6>
                    <h6 class="ms-3 mb-3" style="font-weight: 700">Mood:</h6>
                    <h6 class="ms-3 mb-3" style="font-weight: 400">@Model.matchDictionary["Mood"]</h6>
                </div>
            </div>
            <div class="row">
                <div class="d-flex justify-content-start align-items-center">
                    <h6 class="ms-3 mb-3" style="font-weight: 700">Notes:</h6>
                    <h6 class="ms-3 mb-3" style="font-weight: 400">@Model.matchDictionary["Notes"]</h6>
                </div>
            </div>
            <div class="row">
                <div class="d-flex justify-content-start align-items-center">
                    <h4 class="ms-3 mb-3" style="font-weight: 700">Series:</h4>
                </div>
            </div>
            <div class="row">
                <div class="d-flex justify-content-start align-items-center">
                    <table class="table ms-3 mb-3 me-3">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Start time</th>
                                <th scope="col">End time</th>
                                <th scope="col">Result</th>
                                <th scope="col">Decimal</th>
                                <th scope="col">Inner 10s</th>
                                <th scope="col">Notes</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Dictionary<String, String> seriesDictionary in Model.series)
                            {
                                <tr>
                                    <th scope="row">@seriesDictionary["id"]</th>
                                    <td>@seriesDictionary["StartTime"]</td>
                                    <td>@seriesDictionary["EndTime"]</td>
                                    <td>@seriesDictionary["Result"]</td>
                                    <td>@seriesDictionary["Decimal"]</td>
                                    <td>@seriesDictionary["Inner10s"]</td>
                                    <td>@seriesDictionary["Notes"]</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>